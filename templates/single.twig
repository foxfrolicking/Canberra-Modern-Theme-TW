{# TEMPLATE: SINGLE.twig #}
{% extends "base.twig" %}

{% block content %}
	<div class="flex p-5 flex-col lg:flex-row">
		<article class="post-type-{{ post.post_type }} p-5 lg:w-1/4" id="post-{{ post.ID }}">
			<img src="{{ post.thumbnail.src|resize(1200, 300) }}">
			<section class="article-content">
				<h1 class="article-h1 text-2xl">{{ post.title }}</h1>
				<p class="blog-author">
					<time datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
				</p>
			</section>


		</article>
		<div class="article-body p-5 md:w-2/4 lg:2/4">
		{{post.content}}
		</div>

	</div>

	<div
		class="debug p-8 bg-debug">
		{# useful for debugging, delete later #}
		<h1>Debug info</h1>

		<p class="pb-4">post name:
			{{post.name}}</p>

		<p>file name: single.twig</p>

		{# Output what is in the post #}
		{# {{dump(post)}} #}
	</div>
	<!-- /content-wrapper -->
{% endblock %}
