{# TEMPLATE: SINGLE EVENTS.twig #}

{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<div class="m-5 content-center text-center">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<img src="{{ post.thumbnail.src|resize(1200, 300) }}">
			<section class="article-content">
				<h1 class="article-h1 text-5xl pb-8">{{ post.title }}</h1>
				<p class="blog-author text-2xl pt-8">
					<time datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
				</p>
				<div class="article-body md:px-96">
					{{post.content}}
				</div>
				</div>
			</section>
		</article>

	</div>

	<div
		class="debug p-8 bg-debug">
		{# useful for debugging, delete later #}
		<h1>Debug info</h1>

		<p class="pb-4">post name:
			{{post.name}}</p>

		<p>file name: single-events.twig</p>

		{# Output what is in the post #}
		{# {{dump(post)}} #}
	</div>
	<!-- /content-wrapper -->
{% endblock %}
