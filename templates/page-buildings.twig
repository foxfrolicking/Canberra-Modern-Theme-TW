{# TEMPLATE: home page #}

{% extends "base.twig" %}

{% block content %}

	<div 
		class="m-5 content-center text-center">
		{# DEFAULT PAGE CONTENT #}
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1 text-5xl py-8 buildings">{{post.title}}</h1>
				<div class="article-body md:px-96">
					{{post.content}}
				</div>
			</section>
		</article>

		{# BUILDINGS #}
		<section>
			<h2 class="text-5xl py-8">Buildings</h2>
			<ul class="grid grid-cols-1 gap-5 md:grid-cols-2 lg:grid-cols-4">
				{# loop through the buildings returned #}
				{% for building in buildings %}
					{# load the building tease template #}
					{% include 'tease-buildings.twig' with { post: building} %}
				{% endfor %}
			</ul>

		</section>
	</div>

	<!-- /content-wrapper -->
{% endblock %}
