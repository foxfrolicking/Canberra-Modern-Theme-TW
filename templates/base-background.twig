{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}{% endblock %}

</head>{% endblock %}
<body class="body_class ml-2 mr-4 hero" data-template="base.twig">

{{ function('wp_body_open') }}
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header text-slate pb-8" >
	{% block header %}
		<div class="flex flex-col md:flex-row">
			<h1 class="hdr-logo font-logo font-extrabold text-9xl w-full md:w-1/2" role="banner">
				<a href="{{site.url}}">CM</a>
			</h1>
		
			<nav id="nav-main" class="nav-main content-center	 w-full md:w-1/2" role="navigation">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</nav>
			<!-- #nav -->
		</div>
	{% endblock %}
</header>

<section id="content" role="main" class="content-wrapper text-slate " >
	{% if title %}
		<!-- this title comes from the base.twig file -->
		<h1>{{title}}</h1>
	{% endif %}
	<div class="wrapper">
		{% block content %}
			Sorry, no content
		{% endblock %}
	</div>
	{% if sidebar %}
		<aside class="layout-sidebar">
			{{sidebar}}
		</aside>
	{% endif %}
</section>

{% block footer %}
	<footer id="footer" >
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
{% endblock %}
</body>
</html>
